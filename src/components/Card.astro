---
const { titulo, img, contenido } = Astro.props;
---

<div class="carta">
	<figure>
		<img src={img} />
	</figure>
	<div class="contenido">
		<h3>{titulo}</h3>
		<p>
		{contenido}	
		</p>
	</div>
</div>

<style>
	.carta {
		width: 30%;
		padding: 10px;
		border-radius: 8px;
		box-shadow: 2px 1px 10px gray;
		background-color: rgb(82, 81, 81);
		cursor: pointer;
		transition: all 400ms ease;
	}

	.carta:hover {
		box-shadow: 10px 10px 10px;
		transform: translateY(-3%);
	}

	.carta img {
		width: 50%;
		border-radius: 10px;
	}
</style>
