---
const { img, habilidades, nombre } = Astro.props;
---

<div
    class="flex w-full md:w-1/3 lg:w-1/4 border border-gray-400 rounded-xl shadow-xl overflow-hidden h-70 card"
>
    <div class="w-1/2 overflow-hidden">
        <img
            src={img}
            alt=""
            class="rounded-l-lg h-full hover:scale-[1.1] transition-all duration-1000"
        />
    </div>
    <div class="w-1/2 p-4 rounded-r-lg blur-card overflow-auto h-80">
        <h4 class="font-semibold text-xl text-center logo">{nombre}</h4>
        <ul class="">
            {
                habilidades?.map((habilidad) => (
                    <li class="cursor-pointer text-black font-roman">
                        <details>
                            <summary>{habilidad.poder}</summary>
                            <p class="p-2 border border-black rounded-lg">
                                {habilidad.descripcion}
                            </p>
                        </details>
                    </li>
                ))
            }
        </ul>
    </div>
</div>

<style>
    .blur-card {
        backdrop-filter: blur(7px);
    }
    *::-webkit-scrollbar {
        width: 0px; /* ocultar scroll */
    }
    .font-roman {
        font-family: "Times New Roman", Times, serif;
    }
</style>
